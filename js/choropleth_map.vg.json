{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Arrivals in Malaysia by Country From 2020-2024",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_W9_HW/main/js/ne_110m_new.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.ISO_A3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_W9_HW/main/data/arrivals.csv"
        },
        "key": "country", 
        "fields": ["arrivals"]
      }
    },
    {"calculate": "datum.arrivals + 0.1", "as": "Total Arrivals"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Total Arrivals",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.ISO_A3", "type": "nominal", "title": "Country"},
      {"field": "Total Arrivals", "type": "quantitative", "title": "Arrivals"}
    ]
  }
}
