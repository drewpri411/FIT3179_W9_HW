{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Normalized Arrivals in Malaysia by Country Per 1,000 People (2020-2024)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_W9_HW/main/js/ne_110m_new.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_W9_HW/main/data/normalized_arrivals.csv"
            },
            "key": "country", 
            "fields": ["ArrivalsPer1000"]
          }
        },
        {"calculate": "datum.ArrivalsPer1000 + 0.1", "as": "Normalized Arrivals Per 1000"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Normalized Arrivals Per 1000",
          "type": "quantitative",
          "scale": {"type": "log"}
        },
        "tooltip": [
          {"field": "properties.ISO_A3", "type": "nominal", "title": "Country"},
          {"field": "Normalized Arrivals Per 1000", "type": "quantitative", "title": "Arrivals Per 1000 People"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_W9_HW/main/js/ne_110m_new.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "grey", 
        "strokeWidth": 0.5,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    }
  ]
}
